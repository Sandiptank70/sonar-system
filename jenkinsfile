pipeline {
    agent any

    environment {
        NODE_HOME = tool 'node'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh "${NODE_HOME}/bin/npm ci"
            }
        }

        stage('Lint') {
            steps {
                sh "${NODE_HOME}/bin/npm run lint"
            }
        }

        stage('Test') {
            steps {
                sh "${NODE_HOME}/bin/npm test"
            }
        }

        stage('Build') {
            steps {
                sh "${NODE_HOME}/bin/npm run build"
            }
        }

        stage('Artifact') {
            steps {
                archiveArtifacts artifacts: 'build/**', followSymlinks: false
            }
        }
    }

    post {
        always {
            junit 'test-results/**/*.xml'
        }
    }
}
